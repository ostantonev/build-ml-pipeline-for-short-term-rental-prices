name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: "artefact_before cleaning"
        type: string

      output_artifact:
        description: "cleaned artefact"
        type: string

      output_type:
        description: "W&B artifact output type"
        type: string

      output_description:
        description: "description of output artefact"
        type: string

      min_price:
        description: "min price to consider"
        type: string

      max_price:
        description: "max price to consider"
        type: string


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
